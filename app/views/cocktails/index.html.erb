
<div class="page-container" style="background-color: #e3522d;">
  <div class="banner" style="height: 232px; background-image: /*linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),*/ url(http://i.ebayimg.com/images/i/400750463245-0-1/s-l1000.jpg);">
    <div class="banner-content" style="color: red;">
      <h1>Socktails Cocktails</h1>
        <p>Get Socky.</p>
        <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <div class="container">
    <div class="row">
        <% @cocktails.each do |c| %>
          <div class="col-sx-12 col-sm-6 col-md-4 col-lg-4">
            <div class="card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/500x400/?cocktail')">
              <div class="card-description">
                <h2><%= link_to c.name, cocktail_path(c) %></h2>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>


